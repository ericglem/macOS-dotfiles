# ------------------------ YABAI CONFIG FILE ------------------------

# NOTE:
# This config file is for yabai v2.4.3, the last version that implemented
# window borders.

# Bar settings
yabai -m config status_bar                      off

# Global settings
yabai -m config mouse_follows_focus             off
yabai -m config focus_follows_mouse             off
yabai -m config window_placement                second_child
yabai -m config window_topmost                  off
yabai -m config window_opacity                  on
yabai -m config window_shadow                   on
yabai -m config window_border                   on
yabai -m config window_border_placement         inset
yabai -m config window_border_width             2
yabai -m config window_border_radius            4.5
yabai -m config active_window_border_topmost    on
yabai -m config active_window_border_color      0xffbac2cf
yabai -m config active_window_opacity           1.0
yabai -m config normal_window_opacity           1.0
yabai -m config split_ratio                     0.50
yabai -m config auto_balance                    off
yabai -m config mouse_modifier                  ctrl
yabai -m config mouse_action1                   move
yabai -m config mouse_action2                   resize

# Space settings
yabai -m config layout                          bsp
yabai -m config top_padding                     30
yabai -m config bottom_padding                  30
yabai -m config left_padding                    30
yabai -m config right_padding                   30
yabai -m config window_gap                      13

# Unmanaged programs
yabai -m rule --add app="^Digital Colour Meter$" manage=off
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add app="^Keychain Access$" manage=off
yabai -m rule --add app="^Disk Utility$" manage=off
yabai -m rule --add app="^Logi Options$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Font Book$" manage=off

yabai -m rule --add title="^ndiet$" manage=off layer=above sticky=on border=off
yabai -m rule --add title="^fuzzy_opener$" manage=off layer=above sticky=on opacity=0.98 border=off

# Sticky programs
yabai -m rule --add app="^Digital Colour Meter$" sticky=on layer=above
