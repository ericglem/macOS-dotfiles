# Aliases to specify program options
alias ls='ls -Ahv --color --quoting-style=literal --group-directories-first'

# alias ls='exa -a'
alias grep='grep --color=auto'
alias rm='rm -i'

# Other aliases
alias reboot='osascript -e "tell app \"System Events\" to restart"'
alias shutdown='osascript -e "tell app \"System Events\" to shut down"'
