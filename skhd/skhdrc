# OPEN PROGRAMS
cmd - b: open -a /Applications/Firefox.app
cmd - return: open -a /Applications/Alacritty.app

# MANAGE WINDOWS AND SCREENS
alt - h: yabai -m window --resize left:-15:0
alt - j: yabai -m window --resize bottom:-15:0
alt - k: yabai -m window --resize top:15:0
alt - l: yabai -m window --resize right:15:0

ctrl - h: yabai -m window --resize right:-15:0
ctrl - j: yabai -m window --resize top:-15:0
ctrl - k: yabai -m window --resize bottom:15:0
ctrl - l: yabai -m window --resize left:15:0

alt - 1: yabai -m space --focus 1
alt - 2: yabai -m space --focus 2
alt - 3: yabai -m space --focus 3
alt - 4: yabai -m space --focus 4

alt - x: yabai -m space --mirror x-axis
alt - y: yabai -m space --mirror y-axis
alt - r: yabai -m space --rotate 90
alt - b: yabai -m space --balance

alt - w: yabai -m space --destroy && yabai -m space --focus prev
alt - n: yabai -m space --create && yabai -m space --focus last
alt - q: yabai -m space --move prev
alt - p: yabai -m space --move next

cmd + alt - 1: yabai -m window --space 1 && yabai -m space --focus 1
cmd + alt - 2: yabai -m window --space 2 && yabai -m space --focus 2
cmd + alt - 3: yabai -m window --space 3 && yabai -m space --focus 3
cmd + alt - 4: yabai -m window --space 4 && yabai -m space --focus 4
cmd + alt - n: yabai -m space --create && yabai -m window --space last && yabai -m space --focus last

# TAKE SCREENSHOTS
cmd + shift - 3: screencapture ~/Pictures/Screenshots/$(date | awk '{print $4}' | sed 's/:/./g').png
cmd + shift - 4: screencapture -i ~/Pictures/Screenshots/$(date | awk '{print $4}' | sed 's/:/./g').png
