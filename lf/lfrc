# Basic settings
set icons
set ifs "\n"
set scrolloff 10
set shellopts '-eu'
set previewer ~/.config/lf/pv.sh

map <enter> shell


# Functions
cmd open ${{
    case $(file --mime-type $f -b) in
        text/*) $EDITOR $fx;;
        *) for f in $fx; do setsid $OPENER $f > /dev/null 2> /dev/null & done;;
    esac
}}

# Moving around
map gconf cd ~/.config
map gdow cd ~/Downloads
map gdoc cd ~/Documents
map gmus cd ~/Music
