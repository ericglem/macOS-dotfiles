# Basic settings
set previewer ~/.config/lf/pv.sh
set ifs "\n"
set scrolloff 10
set ignorecase true
set color256 true

# Functions
cmd open ${{
    case $(file --mime-type $f -b) in
        text/*) $EDITOR $fx;;
        *) for f in $fx; do open $f > /dev/null 2> /dev/null & done;;
    esac
}}

cmd mkdir ${{
    printf "Directory Name: "
    read ans
    mkdir $ans
}}

# Mappings
map m
map d
map e

map <c-w> quit
map <enter> shell
map d delete
map x cut

map gconf cd "~/.config"
map gdow cd "~/Downloads"
map gdoc cd "~/Documents"
map gmus cd "~/Music"
map guni cd "~/Documents/??/III"
